<?xml version="1.0" encoding="UTF-8" ?>
<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%blue(%d{ISO8601}) %highlight(%-5level) [%blue(%t)] %yellow(%C{1.}): %msg%n%throwable</pattern>
    </encoder>
  </appender>
  <root level="info">
    <appender-ref ref="stdout" />
  </root>
</configuration>